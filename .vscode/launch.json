    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Python Script",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/add_custom_category.py",
            "args": [
                "-dbu", "*****",
                "-dbp", "*****",
                "-dbs", "*****\\CHECKMARX",
                "-fg", "${workspaceFolder}/groups.json"
            ]
        },
        {
            "name": "Run tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-vx"
            ]
        },
        {
            "name": "Run lint",
            "type": "python",
            "request": "launch",
            "module": "flake8",
            "args": [
                "--count",
                "--statistics"
            ]
        }
    ]
}